{
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "nursery": {
                "useSortedClasses": {
                    "level": "warn",
                    "fix": "safe",
                    "options": {
                        "attributes": ["className"],
                        "functions": ["cn"]
                    }
                }
            },
            "recommended": true,
            "security": { "noDangerouslySetInnerHtml": "off" },
            "suspicious": {
                "noUnknownAtRules": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4
        }
    },
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "files": {
        "includes": ["**", "!**/.next/**/*", "!**/icons/index.ts"]
    }
}
